<div class="container-fluid">
  <div class="row">
    <div class = "col-md-2 sidebar">
      <div class="page-title">
        <i class="fas fa-chart-pie "> Task</i>
      </div>
      <%= render "manager/members/sideber", members: @members %>
    </div> 
  <div class="col-md-10 mt-3">
    <div class="card shadow rounded-start" style="height:100%;">
      <div class="card-header">
        <h6 class="m-0 font-weight-bold title">Task</h6>
      </div>  
      <div class="card-body" >  
      <table class="table">
  <thead>
    <tr>
      <th>課題</th>
      <th>補足</th>
      <th>開始日</th>
      <th>期日</th>
      <th>進捗率</th>
      <th>メンバーコメント</th>
      <th>メンバー完了チェック</th>
      <th>マネジャー確認</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <%= form_with model: @task_new,url: manager_tasks_path(@task),local: true do |f| %>
      <td><%= f.text_field :title %></td>
      <td><%= f.text_field :body  %></td>
      <td><%= date_field_tag 'task[start_on]', nil %></td>
      <td><%= date_field_tag 'post[end_on]', nil %></td>
        <%= f.hidden_field :member_id, value: @member_id %>
      <td><%= f.submit "新規項目追加", class: "btn btn-success" %></td>
      <% end %>
    </tr>
<% @tasks.each do |task| %>
<%= form_with model: task ,url: manager_task_path(task),local: true do |f| %>
    <tr>
      <td><%= f.text_field :title ,id: "task_title_#{task.id}",style: "border: none" %></td>
      <td><%= f.text_field :body  ,id: "task_body_#{task.id}",style: "border: none"%></td>
      <td><%= f.date_field :start_on ,id: "task_start_on_#{task.id}",style: "border: none" %></td>
      <td><%= f.date_field :end_on ,id: "task_end_on_#{task.id}",style: "border: none" %></td>
      <td><%= f.text_field :progress  ,id: "task_progress_#{task.id}",:size=>"1px",style: "border: none" %>%</td>
      <td><%= task.member_body %></td>
      <td><%= task.member_status %></td>
      <td><%= f.select :manager_status,Task.manager_statuses.keys,style: "border: none"%></td>
      <td><%= f.submit "変更を保存する", class: "btn btn-success" %></td>
      <td><%= link_to "消去",manager_task_path(task), class: "btn btn-danger" ,method: :delete %></td>
    </tr>
<% end %>
  <% end %>
  </tbody>
</table>
     </div>
    </div>  
  </div>

    </div>
  </div>
</div>  
