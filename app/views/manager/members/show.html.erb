<div class="container-fluid">
  <div class="row" >
    <div class = "col-lg-2 sidebar">
      <div class="page-title">
        <i class="fas fa-address-card "> プロフィール</i>
        <!--チャット機能リンク---------------------->
          <% if @member_ids.include?(@member.id) %>
            <%= link_to "チャットへ", room_path(current_manager.rooms.find_by(member_id: @member.id)) %><br>
          <% else %>
            <%= form_for Room.new do |f| %>
              <%= f.hidden_field :member_id, :value => @member.id %>
              <%= f.submit "メンバーDM" %>
            <% end %>
          <% end %>
        <!--チャット機能リンク---------------------->
      </div>
      <%= render "sideber", members: @members %>
    </div>
    <div class = "col-lg-10">
      <div class = "row">
        <div class = "col-lg-6">
          <div class="card shadow rounded-start mt-3"style="height: 18rem;" >
            <div class="card-header">
              <h6 class="m-0 font-weight-bold title">プロフィール</h6>
            </div>  
            <div class="card-body text-nowrap">  
              <div class="row member-show text-nowrap">
                <div class="col-md-6 text-center">
                  <%= attachment_image_tag @member, :image , format: 'jpeg', fallback: "no_image.jpg" ,:height => '200' %><br>
                </div>
                <div class="col-md-6">
                  <%= @member.name %><br>
                  <%= @member.name_kana %><br>
                  <%= @member.email %><br>
                  <%= @member.phone_number %><br>
                  <%= @member.is_deleted %><br>
                  <%= link_to "edit" ,edit_manager_member_path %><br>
                </div>  
              </div>
            </div>  
          </div>
          <%= render "ability"%>
        </div>
        <div class="col-lg-6">
          <div class="card shadow rounded-start m-3" >
            <div class="card-header">
            <h6 class="m-0 font-weight-bold title">能力ステータス</h6>
            </div>
              <div class="card-body ">
                <canvas id="myChart" width="100%" height="100%"></canvas>
              </div>
          </div>
        </div>
      </div>  
      <div class="row">
        <div class="card shadow rounded-start m-3" style="width: 100%">
          <div class="card-header">
            <h6 class="m-0 font-weight-bold title">Education</h6>
          </div>  
          <div class="card-body" >  
            <%= render partial: "education", locals: { education_new: @education_new, educations: @educations,education: @education,member_id: @member_id }%>
          </div>
        </div>  
      </div>
    </div>  
    <div class="card shadow rounded-start m-3" style="width: 100%">
      <div class="card-header">
        <h6 class="m-0 font-weight-bold title">Task</h6>
      </div>  
      <div class="card-body ">  
        <%= render partial: "task", locals: { task_new: @task_new, task: @task,tasks: @tasks,member_id: @member_id }%>
      <%= paginate @tasks %>
      </div>
    </div>  
    </div>
  </div>
</div>
</div>


    <%= render partial: "chart", locals: { ability_titles: @ability_titles, abilities: @abilities }%>