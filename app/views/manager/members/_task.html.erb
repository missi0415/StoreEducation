<%= form_with model: task_new,url: manager_tasks_path(task),local: true , id: "form" do |f| %>
    <div class="form-inline">
      <%= f.label :start_on, "開始日", class: "text-secondary"%>
      <%= date_field_tag 'task[start_on]',  Date.today ,class: "form-control" %>
      <%=f.label :end_on,"終了日" , class: "text-secondary" %>
      <%= date_field_tag 'task[end_on]', nil ,class: "form-control"%>
    </div>
    <div class="form-inline mt-1">
      <%= f.text_field :title,class: "form-control w-25" ,placeholder: "課題項目を入力してください" %>
      <%= f.text_area :body ,class: "form-control w-50",id: "auto-resize",placeholder: "課題内容を入力してください"  %>
      <%= f.hidden_field :member_id, value: member_id %>
      <%= f.submit "課題項目追加", class: " form-control w-25 btn btn-secondary" %>
    </div>
      <% end %>
<% tasks.each do |task| %>
  <%= form_with model: task ,url: manager_task_path(task),local: true do |f| %>
    <div class="card-body-m shadow-lg rounded m-4 ">
      <div class="form-inline">
        <%= f.text_field :title ,id: "task_title_#{task.id}",style: "border: none" ,class: "form-control w-25 form-custom-group text-primary font-weight-bold mt-1 mb-2" %>
        <h6 class=" font-weight-bold text-secondary mb-0 mr-3"><%= task.progress %>%</h6>
        <%= f.label :start_on, "開始日", class: "text-secondary"%>
        <%= f.date_field :start_on ,id: "task_start_on_#{task.id}",style: "border: none" ,class: "text-secondary " %>
        <%=f.label :end_on,"終了日" , class: "text-danger" %>
        <%= f.date_field :end_on ,id: "task_end_on_#{task.id}",style: "border: none" ,class: "text-danger font-weight-bold "%>
      </div>
      <div class="form-inline">
      <%= f.text_area :body  ,id: "task_body_#{task.id}",style: "border: none",class: "form-control w-50 auto-resize"%>
        <div class="ml-1">
          <p class="text-secondary font-weight-bold m-0">メンバーステータス</p>
          <p class="text-secondary m-0"><%= task.member_status %></p>
          <p class="text-secondary font-weight-bold m-0">メンバーコメント</p>
          <p class="text-secondary m-0"><%= task.member_body %></p>
        </div>
      </div>
      <div>
        <%= f.range_field :progress, :min=>0, :max=>100, class: "form-control-range mb-1", id: "task_progress_#{task.id}" %>
      </div>
      <div class="text-right">
        <%= f.select :manager_status,Task.manager_statuses.keys,id: "task_manager_statuse_#{task.id}" ,class: "form-control" %>
        <%= f.submit "変更を保存する",id: "task_update_#{task.id}",class: "btn btn-outline-success" %>
      <% end %>
        <%= link_to "削除",manager_task_path(task),id: "task_delete_#{task.id}", class: "btn btn-outline-danger" ,method: :delete %>
      </div>
    </div>  
<% end %> 