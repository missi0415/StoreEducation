<h1>group#index</h1>
<p>ログインしてるmanagerのidは<%=current_manager.id %></p>

<%= form_with model:@group,local:true do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control goup_name' %>
  </div>
  <div class="form-group">
    <%= f.submit class: 'btn btn-success' %>
  </div>  
<% end %>
<% @groups.each do |group| %>
<%= link_to group_path(group.id) do %>
<p><%= group.name %></p>
<% end %>
<%= link_to "編集",edit_group_path(group) ,class: "btn btn-success" %>
<%= link_to "消去",group_path(group) ,data: {confirm: "本当に削除しますか？"}, class: "btn btn-danger",method: :delete %>

<% end %>